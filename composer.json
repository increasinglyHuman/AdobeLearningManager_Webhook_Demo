{
    "name": "alm-community/webhooks-guide",
    "description": "A comprehensive guide and toolkit for Adobe Learning Manager webhooks",
    "type": "library",
    "keywords": ["adobe", "learning-manager", "alm", "webhooks", "integration"],
    "license": "MIT",
    "authors": [
        {
            "name": "ALM Webhooks Guide Contributors"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "predis/predis": "For Redis-based rate limiting",
        "guzzlehttp/guzzle": "For advanced HTTP client features",
        "monolog/monolog": "For advanced logging capabilities",
        "vlucas/phpdotenv": "For .env file support"
    },
    "autoload": {
        "psr-4": {
            "ALMWebhooks\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    }
}